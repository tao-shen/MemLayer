# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agent_memory
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Vector Database - Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Knowledge Graph - Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Embedding Service
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
EMBEDDING_BATCH_SIZE=100

# LLM Service (for reflection and importance scoring)
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Memory Configuration
STM_DEFAULT_WINDOW_SIZE=10
REFLECTION_IMPORTANCE_THRESHOLD=50
FORGETTING_ENABLED=true
FORGETTING_STRATEGY=time-based
FORGETTING_THRESHOLD_DAYS=90

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Blockchain Configuration (Solana + Arweave)
# ============================================

# Solana Network Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WALLET_PATH=~/.config/solana/id.json
SOLANA_COMMITMENT=confirmed

# Helius RPC (Optional - for better performance and indexing)
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_RPC_URL=https://devnet.helius-rpc.com/?api-key=your_helius_api_key_here

# Solana Program IDs (will be set after deployment)
MEMORY_ASSET_PROGRAM_ID=
BUBBLEGUM_PROGRAM_ID=BGUMAp9Gq7iTEuizy4pqaxsTyUCBK68MDfK752saRPUY

# Arweave Configuration
ARWEAVE_GATEWAY_URL=https://arweave.net
ARWEAVE_WALLET_PATH=./config/arweave-wallet.json
ARWEAVE_USE_BUNDLR=true
BUNDLR_NODE_URL=https://devnet.bundlr.network
BUNDLR_CURRENCY=solana

# Blockchain Service Configuration
BLOCKCHAIN_ENABLED=false
MINTING_BATCH_SIZE=50
MINTING_BATCH_TIMEOUT_MS=5000
MINTING_QUEUE_CONCURRENCY=5
MINTING_RETRY_ATTEMPTS=3
MINTING_RETRY_DELAY_MS=1000

# Encryption Configuration
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_DERIVATION_ITERATIONS=100000
KEY_ROTATION_ENABLED=false
KEY_ROTATION_INTERVAL_DAYS=90

# Indexer Configuration
INDEXER_ENABLED=true
INDEXER_SYNC_INTERVAL_MS=10000
INDEXER_START_SLOT=0
INDEXER_CACHE_TTL_SECONDS=60

# Cost Optimization
PRIORITY_FEE_LOW=0
PRIORITY_FEE_MEDIUM=5000
PRIORITY_FEE_HIGH=10000
AUTO_ADJUST_BATCH_SIZE=true
MAX_BATCH_SIZE=100
MIN_BATCH_SIZE=10

# Monitoring - Blockchain Specific
BLOCKCHAIN_METRICS_ENABLED=true
TRACK_TRANSACTION_COSTS=true
ALERT_ON_FAILURE_RATE_PERCENT=5
ALERT_ON_RPC_LATENCY_MS=2000
