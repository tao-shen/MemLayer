# ============================================
# 区块链模块配置示例
# 默认配置：Solana + IPFS，所有记忆都可上链（用户可选）
# ============================================

# ============ 全局配置 ============
BLOCKCHAIN_ENABLED=true

# ============ Solana 配置（默认链）============
SOLANA_ENABLED=true
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
MEMORY_PROGRAM_ID=

# Solana 批处理配置
SOLANA_BATCH_ENABLED=true
SOLANA_BATCH_MIN_SIZE=10
SOLANA_BATCH_MAX_SIZE=100
SOLANA_BATCH_TIMEOUT=30000

# ============ Ethereum 配置 ============
ETHEREUM_ENABLED=false
ETHEREUM_NETWORK=goerli
ETHEREUM_RPC_URL=
ETHEREUM_CONTRACT_ADDRESS=

# ============ Polygon 配置 ============
POLYGON_ENABLED=false
POLYGON_NETWORK=mumbai
POLYGON_RPC_URL=
POLYGON_CONTRACT_ADDRESS=

# ============ 资产类型配置 ============

# 记忆资产（所有记忆都可上链，用户可选）
MEMORY_ASSET_ENABLED=true
MEMORY_ASSET_CHAIN=solana
MEMORY_ASSET_AUTO_MINT=false
MEMORY_ASSET_MIN_IMPORTANCE=0
MEMORY_ASSET_REQUIRE_APPROVAL=true
MEMORY_ASSET_ENCRYPT_CONTENT=true

# 注意：minImportance=0 表示所有记忆都可以上链，由用户决定

# 对话资产
CONVERSATION_ASSET_ENABLED=false
CONVERSATION_ASSET_CHAIN=polygon
CONVERSATION_ASSET_AUTO_MINT=false
CONVERSATION_ASSET_MIN_TURNS=10
CONVERSATION_ASSET_MIN_DURATION=300

# 知识图谱资产
KNOWLEDGE_ASSET_ENABLED=false
KNOWLEDGE_ASSET_CHAIN=ethereum
KNOWLEDGE_ASSET_AUTO_MINT=false
KNOWLEDGE_ASSET_MIN_NODES=50
KNOWLEDGE_ASSET_REQUIRE_VALIDATION=true

# 反思资产
REFLECTION_ASSET_ENABLED=false
REFLECTION_ASSET_CHAIN=solana
REFLECTION_ASSET_AUTO_MINT=true
REFLECTION_ASSET_MIN_INSIGHT_SCORE=0.8

# ============ 存储配置（默认 IPFS）============
STORAGE_PROVIDER=ipfs

# IPFS（默认存储）
IPFS_GATEWAY=https://ipfs.io
IPFS_PINNING_SERVICE=pinata
PINATA_API_KEY=
PINATA_API_SECRET=

# Arweave（可选：永久备份）
ARWEAVE_BACKUP_ENABLED=false
ARWEAVE_HOST=arweave.net
ARWEAVE_PORT=443
ARWEAVE_PROTOCOL=https
ARWEAVE_WALLET_PATH=

# Filecoin（可选）
FILECOIN_BACKUP_ENABLED=false

# S3 Compatible
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=

# ============ 加密配置 ============
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_DERIVATION=pbkdf2

# ============ 索引配置 ============
INDEXER_ENABLED=true
INDEXER_REALTIME=true
INDEXER_CACHE_PROVIDER=redis

# ============ 访问控制配置 ============
ACCESS_CONTROL_ENABLED=true
ACCESS_CONTROL_DEFAULT_POLICY=private

# ============ 监控配置 ============
BLOCKCHAIN_METRICS_ENABLED=true
BLOCKCHAIN_LOGGING_LEVEL=info
